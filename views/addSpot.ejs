<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Spotly · Add Spot</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  
  <body class="page--dark">
    <!-- BACKGROUND LINES -->
<div class="bg-draw" aria-hidden="true">
  <svg viewBox="0 0 1440 900" preserveAspectRatio="none">
    <path class="draw-line yellow" pathLength="1000" style="--pathLen:1000"
      d="M180,-40 C240,160 200,320 120,480 C40,680 80,820 220,1040" />
    <path class="draw-line green" pathLength="1000" style="--pathLen:1000"
      d="M360,860 C620,720 880,720 1160,860" />
    <path class="draw-line blue" pathLength="1000" style="--pathLen:1000"
      d="M1380,-80 C1500,120 1500,280 1380,360 C1260,440 1260,620 1380,700 C1500,780 1500,960 1380,1080" />
  </svg>
</div>

    
    <nav class="navbar">
      <a href="/" class="nav-left">
        <div class="logo-dot"></div>
        <span>Spotly</span>
      </a>
      
      
      <div class="nav-right">
        <a href="/explore">Explore</a>
        <a href="/spots/add">Add Spot</a>
        <a href="/spots/friends">Friends</a>
      
        <% if (isLoggedIn) { %>
          <a href="/users/profile">Profile</a>
      
          <form action="/users/logout" method="POST" style="display:inline;">
            <button class="nav-btn" type="submit">Log out</button>
          </form>
        <% } else { %>
          <a href="/users/login">Login</a>
          <a href="/users/register">Register</a>
        <% } %>
      </div>
      
    </nav>

    <main class="addspot-page">
      <form class="addspot-card" action="/spots/add" method="POST">
        <h1>Add a New Spot</h1>

        

        <div class="form-block">
          <label class="form-label">Spot title</label>
          <input class="form-input" name="title" placeholder="Spot title"/>
        </div>

        <div class="form-block">
          <label class="form-label">Location name</label>
          <input class="form-input" name="locationName" placeholder="e.g. The Bell Inn"/>
        </div>

        <div class="form-block">
          <label class="form-label">Description</label>
          <textarea class="form-textarea" name="description" placeholder="Why is this place special? What’s the vibe?"></textarea>
        </div>

        <div class="form-block">
          <label class="form-label">Vibe tags</label>
          <div class="vibe-tags">
            <button type="button" class="vibe-btn" data-vibe="chill">Chill</button>
            <button type="button" class="vibe-btn" data-vibe="party">Party</button>
            <button type="button" class="vibe-btn" data-vibe="study">Study</button>
            <button type="button" class="vibe-btn" data-vibe="artsy">Artsy</button>
          </div>
          
          <!-- hidden input that actually submits -->
          <input type="hidden" name="vibeTags" id="vibeTagsInput">
          
        
        </div>
 


        

        <button class="submit-btn">Save Spot</button>
      </form>
    </main>

    <footer class="footer-basic">
      <div>Spotly — Discover the vibe. Share your world.</div>
      <div class="dim">© <%= new Date().getFullYear() %> Anri</div>
    </footer>
    <script>
      const vibeButtons = document.querySelectorAll(".vibe-btn");
      const vibeInput = document.getElementById("vibeTagsInput");
    
      let selectedVibes = [];
    
      vibeButtons.forEach(btn => {
        btn.addEventListener("click", () => {
          const vibe = btn.dataset.vibe;
    
          if (selectedVibes.includes(vibe)) {
            
            selectedVibes = selectedVibes.filter(v => v !== vibe);
            btn.classList.remove("active");
          } else {
            
            selectedVibes.push(vibe);
            btn.classList.add("active");
          }
    
          vibeInput.value = selectedVibes.join(",");
        });
      });
    </script>
    
    
    
  </body>
</html>
